<h1>奇跡の一言</h1>
<p>宮城です。</p>
<h2>笹川さんの1日</h2>
<table>
  <thead>
    <tr>
      <th>笹川さんの一言</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to '詳細', task_path(task) %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task_path(task), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '追加', new_task_path %>
